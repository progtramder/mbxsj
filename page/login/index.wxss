.body-wrapper {
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.input-wrapper {
  width: 650rpx;
  margin-bottom: 100rpx;
  border-color: beige;
  border-width: 5rpx;
  border-style: solid;
  height: 100rpx;
  box-sizing: border-box;
}
.input-wrapper input {
  height: 100rpx;
}
.hover-class {
  opacity: 0.6
}

.login {
  height: 100rpx;
  width: 650rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-style: solid;
  border-width: 5rpx;
  border-color:beige;
  border-radius: 10rpx;
  color: orange;
  font-weight: bold;
  font-size: 35rpx;
  box-sizing: border-box;
}